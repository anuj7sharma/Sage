<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Text view Styles-->
    <style name="txtview_small_widget">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/app_textcolor</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">@dimen/activity_margin_3</item>
        <!--<item name="android:maxLines">1</item>-->
    </style>

    <style name="txtview_standard_widget">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/app_textcolor</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingLeft">@dimen/activity_margin_3</item>
        <!--<item name="android:maxLines">1</item>-->
    </style>

    <style name="txtview_info_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <!--CArd view-->
    <style name="widget_cardview" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="widget_cardview_no_padding" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
